<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.ichsan_1202150058_modul2.MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="329dp"
        android:layout_height="284dp"
        app:srcCompat="@drawable/mulut"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Menu"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="300dp" />

    <RadioButton
        android:id="@+id/btndine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dine In"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="343dp" />

    <RadioButton
        android:id="@+id/btntake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Away"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="394dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Pesan Sekarang"
        android:onClick="PesanNow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntake" />
</android.support.constraint.ConstraintLayout>
